[colors]
background = #99000000
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/mandalay-dp2]
monitor = ${env:MONITOR:DP-2}
dpi = 192
width = 100%
height = 60
radius = 6.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 4
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = "DejaVu Sans:size=12:antialias=true;1"
font-1 = "UbuntuMono Nerd Font:size=13:antialias=true;1"
font-2 = "Fura Mono NF:size=13:antialias=true;1"
font-3 = "Weather Icons:size=12;1"

modules-left = i3
modules-center = spotify
modules-right = pulseaudio xkeyboard filesystem memory cpu openvpn wlan eth temperature openweathermap-detailed date updates-arch-combined powermenu
tray-position = right
tray-maxsize = 40
tray-padding = 0


[bar/mandalay-dp0]
monitor = ${env:MONITOR:DP-0}
dpi = 192
width = 300
height = 50
offset-x = 3540
radius = 6.0
fixed-center = false
override-redirect = true

background = #00000000
