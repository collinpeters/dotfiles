# vim: filetype=i3config

set $scripts ~/.config/i3/scripts
set $mod Mod4

set $OUTPUT1 eDP-1
#set $OUTPUT2 DP-3.8
# sometimes 3rd display is DP-3...
#set $OUTPUT2b DP-3
#set $OUTPUT3 HDMI-0

#Needed for i3-gaps
#for_window [class="^.*"] border pixel 5
#gaps inner 5
#gaps outer 5

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:UbuntuMono Nerd Font 16

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

focus_follows_mouse no


# ########
# BINDINGS
# ########

# start a terminal
bindsym $mod+Return exec alacritty --config-file ~/.config/alacritty/alacritty-mirage.yml

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# focus the parent container
bindsym $mod+a focus parent

# focus BitWarden
bindsym $mod+b [class="Bitwarden"] focus

# focus Slack
bindsym $mod+c [class="Slack"] focus

# reload the configuration file
bindsym $mod+Shift+c reload

# focus the child container
#bindsym $mod+d focus child
bindsym $mod+d 			exec --no-startup-id rofi -show drun

bindsym $mod+e layout toggle split
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

bindsym $mod+h focus left
bindsym $mod+Shift+h move left
bindsym $mod+Ctrl+h move workspace to output left

bindsym $mod+j focus down
bindsym $mod+Shift+j move down

bindsym $mod+k focus up
bindsym $mod+Shift+k move up

bindsym $mod+l focus right
bindsym $mod+Shift+l move right
bindsym $mod+Ctrl+l move workspace to output right


# kill focused window
bindsym $mod+Shift+q kill

bindsym $mod+r mode "resize"

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

bindsym $mod+s layout stacking

bindsym $mod+u [title="scratchcli"] scratchpad show; [title="scratchcli"] move position center

# split in vertical orientation
bindsym $mod+v split v
# split in horizontal orientation
bindsym $mod+Shift+v split h

bindsym $mod+w layout tabbed

bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace and focus
bindsym $mod+Shift+1 move container to workspace 1; workspace 1
bindsym $mod+Shift+2 move container to workspace 2; workspace 2
bindsym $mod+Shift+3 move container to workspace 3; workspace 3
bindsym $mod+Shift+4 move container to workspace 4; workspace 4
bindsym $mod+Shift+5 move container to workspace 5; workspace 5
bindsym $mod+Shift+6 move container to workspace 6; workspace 6
bindsym $mod+Shift+7 move container to workspace 7; workspace 7
bindsym $mod+Shift+8 move container to workspace 8; workspace 8
bindsym $mod+Shift+9 move container to workspace 9; workspace 9
bindsym $mod+Shift+0 move container to workspace 10; workspace 10

# RESIZE MODE
mode "resize" {
        bindsym h resize shrink width 10 px or 5 ppt
        bindsym j resize grow height 10 px or 5 ppt
        bindsym k resize shrink height 10 px or 5 ppt
        bindsym l resize grow width 10 px or 5 ppt

        bindsym Shift+h resize shrink width 25 px or 10 ppt
        bindsym Shift+j resize grow height 25 px or 10 ppt
        bindsym Shift+k resize shrink height 25 px or 10 ppt
        bindsym Shift+l resize grow width 25 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}


# ######
# CONFIG
# ######

exec --no-startup-id setxkbmap -option caps:none

#bindsym VoidSymbol 			exec --no-startup-id rofi -show drun
#bindsym VoidSymbol+d 	exec --no-startup-id rofi -show window
#bindsym Control_R exec rofi -show drun -kb-cancel VoidSymbol

# lock these 3 workspaces to a display
workspace 1 output $OUTPUT1
workspace 2 output $OUTPUT2
workspace 2 output $OUTPUT2b
workspace 3 output $OUTPUT3

# scratch running a persistent tmux instance
for_window [title="scratchcli"] floating enable
for_window [title="scratchcli"] resize set 1400 900
for_window [title="scratchcli"] move scratchpad
for_window [title="scratchcli"] border pixel 5
exec --no-startup-id alacritty --config-file ~/.config/alacritty/alacritty-mirage.yml --title scratchcli -e tmux new-session -A -s scratchcli

# Volume keyboard controls
bindsym XF86AudioRaiseVolume exec "bash -c 'for i in `pactl list short sinks | cut -f 1`; do pamixer --allow-boost --increase 5 --sink $i; done'"
bindsym XF86AudioLowerVolume exec "bash -c 'for i in `pactl list short sinks | cut -f 1`; do pamixer --allow-boost --decrease 5 --sink $i; done'"
bindsym XF86AudioMute        exec "bash -c 'for i in `pactl list short sinks | cut -f 1`; do pamixer --toggle-mute --sink $i; done'"

# Sreen brightness keyboard controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10

for_window [class="Pavucontrol" instance="pavucontrol"] floating enable
for_window [title="GpuTest.*"] floating enable

exec_always --no-startup-id $HOME/.config/polybar/launch.sh mirage
#exec_always /home/collin/.screenlayout/mirage.sh
#exec_always --no-startup-id $HOME/.config/polybar/launch.sh

exec --no-startup-id xinput set-prop "SynPS/2 Synaptics TouchPad" "libinput Tapping Enabled" 1

#exec --no-startup-id compton --xrender-sync-fence

exec --no-startup-id ~/.config/i3/scripts/bg-script.sh

exec --no-startup-id dunst

exec --no-startup-id nm-applet

exec --no-startup-id blueman-applet

exec --no-startup-id pasystray

exec --no-startup-id /usr/lib/geoclue-2.0/demos/agent
exec --no-startup-id redshift-gtk

